{
  "name": "space-rangers",
  "description": "Game 'Space Rangers' based on MVC concept",
  "scripts": {
    "start": "watchify --ignore js/app.bundle.js js/app.js -o js/app.bundle.js -d",
    "build": "browserify --ignore js/app.bundle.js js/app.js -o js/app.bundle.js -d"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "watchify": "^3.9.0"
  }
}
